<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Properties for reusable values -->
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="baseDir">./logs</Property>
        <Property name="errorLog">log_error</Property>
        <Property name="allLog">log_all</Property>
    </Properties>

    <!-- Appenders define where logs are sent -->
    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling File Appender for all logs -->
        <RollingFile name="RollingFileAll"
                     fileName="${baseDir}/${allLog}.log"
                     filePattern="${baseDir}/${allLog}-%d{yyyy-MM-dd}-%i.log"
                     append="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- Roll over daily -->
                <TimeBasedTriggeringPolicy/>
                <!--                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>-->
                <!-- Roll over when file size reaches 200KB -->
                <SizeBasedTriggeringPolicy size="200KB"/>
            </Policies>
            <!-- Delete files older than 30 days -->
            <DefaultRolloverStrategy>
                <Delete basePath="${baseDir}" maxDepth="1">
                    <IfFileName glob="log_*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <!-- Separate file for ERROR level logs -->
        <RollingFile name="RollingFileError"
                     fileName="${baseDir}/${errorLog}.log"
                     filePattern="${baseDir}/${errorLog}-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="200KB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${baseDir}" maxDepth="1">
                    <IfFileName glob="log_*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

    </Appenders>

    <!-- Loggers define which appenders to use and at what level -->
    <Loggers>

        <!-- Root logger catches all logging events -->
        <Root level="TRACE">
            <AppenderRef ref="Console" level="OFF"/>
            <AppenderRef ref="RollingFileAll" level="ALL"/>
            <AppenderRef ref="RollingFileError" level="ERROR"/>
        </Root>

    </Loggers>

</Configuration>